{
  "env": {
    "meteor": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:meteor/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["meteor", "react"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-undef": "warn"
  }
}
